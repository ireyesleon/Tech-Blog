<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
{{#if post.length}}
  <div class="col-md-6 post-list">
    <h3>Your posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}{{post.creation_date}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <div class="col-md-6">
        <a href="/newPost">+ New Post</a>
  </div>
  </div>

  <script src="/js/dashboard.js"></script>