<div class="row login border rounded-3 border-5 p-0 border-dark m-2 col-5">
  <div>
    <h2>Sign up</h2>

    <form class="form signup-form">
      <div class="form-group m-2">
        <label class="col-12" for="username-login">Username:</label>
        <input class="form-input col-12" type="text" id="username-login" />
      </div>
      <div class="form-group m-2">
        <label class="col-12" for="password-login">Password:</label>
        <input class="form-input col-12" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="login-button">Sign up</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>