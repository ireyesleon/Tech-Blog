<div class="row login border rounded-3 border-5 p-0 border-dark m-2 col-12">
  <div>
    <h3>Update post:</h3>

    <form class="form update-post-form" data-id="{{id}}">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <textarea class="form-input col-12" id="post-title" name="post-title"/>{{title}}</textarea>
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input col-12" id="post-content" name="post-content"/>{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="update-button">Update</button>
      </div>
    </form>
    <button class="btn btn-primary" id="delete-button" data-id="{{id}}">Delete</button>

  </div>
  </div>

  <script src="/js/dashboard.js"></script>